    {
      "title": "الإخلاص",
      "surah": 112,
      "verses": [
        {
          "verse_key": "112:1",
          "arabic": "قُلْ هُوَ ٱللَّهُ أَحَدٌ",
          "english": "Say, ˹O Prophet,˺ “He is Allah—One"
        },
        {
          "verse_key": "112:2",
          "arabic": "ٱللَّهُ ٱلصَّمَدُ",
          "english": "Allah—the Sustainer ˹needed by all˺"
        },
        {
          "verse_key": "112:3",
          "arabic": "لَمْ يَلِدْ وَلَمْ يُولَدْ",
          "english": "He has never had offspring, nor was He born"
        },
        {
          "verse_key": "112:4",
          "arabic": "وَلَمْ يَكُن لَّهُۥ كُفُوًا أَحَدٌ",
          "english": "And there is none comparable to Him"
        }
      ]
    },
    {
      "title": "الفلق",
      "surah": 113,
      "verses": [
        {
          "verse_key": "113:1",
          "arabic": "قُلْ أَعُوذُ بِرَبِّ ٱلْفَلَقِ",
          "english": "Say, “I seek refuge in the Lord of daybreak”"
        },
        {
          "verse_key": "113:2",
          "arabic": "مِن شَرِّ مَا خَلَقَ",
          "english": "from the evil of whatever He has created"
        },
        {
          "verse_key": "113:3",
          "arabic": "وَمِن شَرِّ غَاسِقٍ إِذَا وَقَبَ",
          "english": "and from the evil of the night when it grows dark"
        },
        {
          "verse_key": "113:4",
          "arabic": "وَمِن شَرِّ ٱلنَّفَّـٰثَٰتِ فِى ٱلْعُقَدِ",
          "english": "and from the evil of those who practice witchcraft when they blow in the knots"
        },
        {
          "verse_key": "113:5",
          "arabic": "وَمِن شَرِّ حَاسِدٍ إِذَا حَسَدَ",
          "english": "and from the evil of an envier when they envy"
        }
      ]
    },
    {
      "title": "الناس",
      "surah": 114,
      "verses": [
        {
          "verse_key": "114:1",
          "arabic": "قُلْ أَعُوذُ بِرَبِّ ٱلنَّاسِ",
          "english": "Say, “I seek refuge in the Lord of humankind”"
        },
        {
          "verse_key": "114:2",
          "arabic": "مَلِكِ ٱلنَّاسِ",
          "english": "the Master of humankind"
        },
        {
          "verse_key": "114:3",
          "arabic": "إِلَـٰهِ ٱلنَّاسِ",
          "english": "the God of humankind"
        },
        {
          "verse_key": "114:4",
          "arabic": "مِن شَرِّ ٱلْوَسْوَاسِ ٱلْخَنَّاسِ",
          "english": "from the evil of the lurking whisperer"
        },
        {
          "verse_key": "114:5",
          "arabic": "ٱلَّذِى يُوَسْوِسُ فِى صُدُورِ ٱلنَّاسِ",
          "english": "who whispers into the hearts of humankind"
        },
        {
          "verse_key": "114:6",
          "arabic": "مِنَ ٱلْجِنَّةِ وَٱلنَّاسِ",
          "english": "from among jinn and humankind"
        }
      ]
    }
  ]
